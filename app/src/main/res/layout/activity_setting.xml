<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yangzhiwen.demo.CenterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="插件Activity" />

            <Button
                android:id="@+id/send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="向插件Receiver发送广播" />

            <Button
                android:id="@+id/start_local"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="start 插件Service" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="unBindService前需要先启动" />

            <Button
                android:id="@+id/bind_local"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bind 插件Service" />

            <Button
                android:id="@+id/stop_local"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="stop 插件Service" />

            <Button
                android:id="@+id/unbind_local"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="unbind 插件Service" />

            <Button
                android:id="@+id/start_remote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="start 插件Remote Service" />

            <Button
                android:id="@+id/bind_remote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bind 插件Remote Service" />

            <Button
                android:id="@+id/stop_remote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="stop 插件Remote Service" />

            <Button
                android:id="@+id/unbind_remote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="unbind 插件Remote Service" />

            <Button
                android:id="@+id/insert_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="insert 插件provider" />

            <Button
                android:id="@+id/query_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="query 插件provider" />

            <Button
                android:id="@+id/delete_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="delete 插件provider" />

            <ImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorAccent" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
